<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/barrel_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ff355678"
    android:orientation="vertical"
    android:tag="normal"
    android:weightSum="4.0">

    <RelativeLayout
        android:id="@+id/mainaaaaaaa"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="2.0"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/photo"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/screen_loading"
            android:contentDescription="@string/app_name" />

        <LinearLayout
            android:id="@+id/barrel_headingLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/barrel_OnlyForImage"
            android:layout_alignParentLeft="true"
            android:background="#77000000"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="7.0">

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3.0dip"
                android:layout_marginLeft="13.0dip"
                android:layout_marginRight="13.0dip"
                android:layout_marginTop="3.0dip"
                android:layout_weight="7.0"
                android:textColor="@color/white"
                android:textSize="18.0dip"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/video_link"
                android:layout_width="30.0dip"
                android:layout_height="30.0dip"
                android:layout_marginBottom="10.0dip"
                android:layout_marginRight="7.0dip"
                android:layout_marginTop="10.0dip"
                android:layout_weight="3.0"
                android:background="@drawable/youtube"
                android:contentDescription="@string/app_name" />

            <LinearLayout
                android:id="@+id/barrel_shareButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/goto_link"
                    android:layout_width="25.0dip"
                    android:layout_height="30.0dip"
                    android:layout_marginBottom="10.0dip"
                    android:layout_marginRight="7.0dip"
                    android:layout_marginTop="10.0dip"
                    android:background="@drawable/share_icon"
                    android:contentDescription="@string/app_name" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/barrel_OnlyForImage"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:visibility="visible" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/mainaaaaaaa1111"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="2.0"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/barrel_postedLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/barrel_postedTime"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="@drawable/bg_news_link"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="12.0dip" />

            <TextView
                android:id="@+id/barrel_writtenByActual"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dp"
                android:background="@drawable/bg_news_link"
                android:gravity="center_vertical"
                android:textColor="@android:color/white"
                android:textSize="12.0dip" />


            <TextView
                android:id="@+id/view_more"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dp"
                android:background="@drawable/bg_news_link"
                android:gravity="center_vertical"
                android:text="@string/full_news_text"
                android:textColor="@android:color/white"
                android:textSize="12.0dip" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/container_description"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white" />
    </LinearLayout>
</LinearLayout>